<UserControl x:Class="MPD.TeklaWPFViewModelToolkit.TeklaLabelCheckBoxWithInput"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:UIControls="clr-namespace:Tekla.Structures.Dialog.UIControls;assembly=Tekla.Structures.Dialog"
             xmlns:local="clr-namespace:MPD.TeklaWPFViewModelToolkit"
             mc:Ignorable="d" 
             d:DesignHeight="25" d:DesignWidth="200">
    <Grid x:Name="ComponentGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="25" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Label
            x:Name="VariableLabel"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            />
        <UIControls:WpfFilterCheckBox
            x:Name="FilterCheckBox"
            Grid.Column="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            />
        <TextBox
            Grid.Column="2"
            x:Name="InputTextBox"
            VerticalAlignment="Center"
            TextWrapping="Wrap"
            />
    </Grid>
</UserControl>
