<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net48</TargetFramework>
    <UseWpf>true</UseWpf>
	<LangVersion>11.0</LangVersion>

	<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <DevelopmentDependency>true</DevelopmentDependency>
    <PackageId>TeklaPluginWPFViewModelToolkit</PackageId>
    <Version>0.0.1</Version> 
	<Authors>Main Part Design</Authors>
    <Description>Library with WPF controls and Source Generation for Tekla WPF plugins.</Description>
  </PropertyGroup>

  <ItemGroup>
    <Compile Update="TeklaFilterCheckBoxWithInput.xaml.cs">
      <SubType>Code</SubType>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Tekla.Structures.Dialog" Version="2025.0.0">
      <IncludeAssets>compile;build</IncludeAssets>
	  <PrivateAssets>all</PrivateAssets>
    </PackageReference>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\TeklaWPFViewModelGenerator\TeklaWPFViewModelGenerator.csproj"
       ReferenceOutputAssembly="false" 
	   OutputItemType="Analyzer" 
	   Pack="true" 
	   PackagePath="analyzers/dotnet/cs" 
	   />
  </ItemGroup>

</Project>
